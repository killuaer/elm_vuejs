border-1px($color)
	position: relative
	&:after ,&:before
		display: block
		width: 100%
		position: absolute
		left: 0
		border-top: 1px solid $color
		content: ' '
	&:after
		bottom: 0
	&:before
		top: 0

bg-image($url)
	background-image: url($url + "@2x.png")
	@media (-webit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
		background-image: url($url + "@3x.png")
		